import telebot
from telebot import types
import psycopg2
#
bot = telebot.TeleBot('')
admin_chat_id = []

DB_URI = ""
db_connection = psycopg2.connect(DB_URI, sslmode="require")
db_object = db_connection.cursor()


def write_to_all(message):
    bot.send_message(
        message.chat.id, "Rakstiet ziÅ†u")


@bot.message_handler(commands=['gossip'])
def gossip(message):
    bot.send_message(
        message.chat.id, "Rakstiet paroli")


def menu(message):
    global status
    status = 0
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    item1 = types.KeyboardButton("AnonÄ«ma sÅ«dzÄ«baâœ‰ï¸")
    item2 = types.KeyboardButton("NoteikumiğŸ“‹")
    item3 = types.KeyboardButton("IdejasğŸ’¡")
    item4 = types.KeyboardButton("ZiÅ†ot par situÄcijuğŸš¨")
    markup.add(item1, item2, item3, item4)
    bot.send_message(
        message.chat.id, "IzvÄ“lieties vienu no manÄm komandÄmğŸ¤–", reply_markup=markup, parse_mode='html')


@bot.message_handler(commands=['chatid'])
def chat_id(message):
    chatid = message.chat.id
    bot.send_message(
        message.chat.id, f"Chat id: {chatid}")


@bot.message_handler(commands=['start'])
def start_reply(message):
    global status
    status = 0
    user_id = message.from_user.id
    username = message.from_user.first_name
    db_object.execute(f"SELECT id FROM users WHERE id = {user_id}")
    result = db_object.fetchone()
    if not result:
        db_object.execute(
            "INSERT INTO users(id, name) VALUES(%s,%s)", (user_id, username))
        db_connection.commit()
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    item1 = types.KeyboardButton("AnonÄ«ma sÅ«dzÄ«baâœ‰ï¸")
    item2 = types.KeyboardButton("IdejasğŸ’¡")
    item3 = types.KeyboardButton("NoteikumiğŸ“‹")
    item4 = types.KeyboardButton("ZiÅ†ot par situÄcijuğŸš¨")
    markup.add(item1, item2, item3, item4)
    bot.send_message(
        message.chat.id, "Laipni lÅ«dzam <b>Olaines 2. vidusskolas</b> botağŸ¤–\nIzvÄ“lies vienu no pogÄm", reply_markup=markup, parse_mode='html')


@bot.message_handler(content_types="text")
def message_reply(message):
    global status
    if message.text == "AnonÄ«ma sÅ«dzÄ«baâœ‰ï¸":
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        item1 = types.KeyboardButton("AtpakaÄ¼")
        markup.add(item1)
        bot.send_message(message.chat.id, "Uzrakstiet savu sÅ«dzÄ«buâœ‰ï¸",
                         reply_markup=markup, parse_mode='html')
        status = 1
    elif message.text == "AtpakaÄ¼":
        menu(message)
    elif message.text == "2134768":
        write_to_all(message)
        status = 2
    elif status == 2:
        status = 0
        db_object.execute(f"SELECT id FROM users")
        result = db_object.fetchall()
        for user in result:
            b0 = str(user)
            b1 = b0.replace("(", "")
            b2 = b1.replace(")", "")
            b3 = b2.replace(",", "")
            bot.send_message(chat_id=b3, text=f"{message.text}")
    elif message.text == "IdejasğŸ’¡":
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        item1 = types.KeyboardButton("AtpakaÄ¼")
        markup.add(item1)
        bot.send_message(message.chat.id, "Uzrakstiet savu idejuğŸ’¡",
                         reply_markup=markup, parse_mode='html')
        status = 1
    elif status == 1:
        if len(message.text) > 7:
            markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
            item1 = types.KeyboardButton("AtpakaÄ¼")
            markup.add(item1)
            bot.send_message(
                message.chat.id, "Paldies! JÅ«su ziÅ†a ir nosÅ«tita!ğŸ˜€", reply_markup=markup)
            status = 0

            for i in admin_chat_id:
                bot.forward_message(
                    chat_id=i, from_chat_id=message.chat.id, message_id=message.message_id)

        else:
            bot.send_message(
                message.chat.id, "Man tas nepatÄ«k!")
            menu(message)
    elif message.text == "NoteikumiğŸ“‹":
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        item1 = types.KeyboardButton("AtpakaÄ¼")
        markup.add(item1)
        bot.send_message(
            message.chat.id, "1. Nelieto lamuvÄrdus", reply_markup=markup)
        status = 0
    elif message.text == "ZiÅ†ot par situÄcijuğŸš¨":
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        item1 = types.KeyboardButton("AtpakaÄ¼")
        markup.add(item1)
        bot.send_message(message.chat.id, "Uzrakstiet savu situacijuğŸš¨",
                         reply_markup=markup, parse_mode='html')
        status = 1
    else:
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        item1 = types.KeyboardButton("AtpakaÄ¼")
        markup.add(item1)
        bot.send_message(
            message.chat.id, "Es nesaprotu..", reply_markup=markup)
        status = 0


status = 0
bot.polling(none_stop=True)
